<h2 align='center'><%= @article.title %></h2>
<div class="well col-xs-8 col-xs-offset-2">
  <h4 align="center" class="description">
    <strong>Description:</strong>
  </h4>
  <%= simple_format @article.description %>
  <div class="article-actions">
    <%= link_to 'View all articles', articles_path, class: 'btn btn-xs btn-success' %> 
    <%= link_to 'Edit article', edit_article_path(@article), class: 'btn btn-xs btn-primary' %>
    <%= link_to 'Delete article', @article, method: :delete, data: { confirm: 'Are you sure?' },
          class: 'btn btn-xs btn-danger' %>
  </div>
</div>


